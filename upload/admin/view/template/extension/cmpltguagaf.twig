{{ header }}{{ column_left }}

<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-cmpltguagaf" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</button>
        <a href="{{ cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ button_cancel }}</a> {{ text_extdoc }} </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if(error_warning) %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if(success) %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> </h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-cmpltguagaf" class="form-horizontal">
          <ul class="nav nav-tabs" id="tabstores">
            {% for store in stores %}
            <li><a href="#store{{ store['store_id'] }}" data-toggle="tab">{{ store['name'] }}</a></li>
            {% endfor %}
          </ul>
          <div class="tab-content">
            {% for store in stores %}
            <div class="tab-pane" id="store{{ store['store_id'] }}">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_status }}</label>
                <div class="col-sm-4">
                  <label class="radio-inline">
                    <input type="radio" name="desc[{{ store['store_id'] }}][status]" value="1" {% if(desc[store['store_id']]['status'] == 1) %}checked="checked"{% endif %} />
                    {{ text_enabled }}</label>
                  <label class="radio-inline">
                    <input type="radio" name="desc[{{ store['store_id'] }}][status]" value="0" {% if(desc[store['store_id']]['status'] == 0) %}checked="checked"{% endif %} />
                    {{ text_disabled }}</label>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_gafid }} </label>
                <div class="col-sm-10">
                  <input type="text" name="desc[{{ store['store_id'] }}][gafid]" value="{{ desc[store['store_id']]['gafid'] }}" class="form-control" />
                  <p><small>Leave Blank if you dont have it</small></p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_gaid }}</label>
                <div class="col-sm-10">
                  <input type="text" name="desc[{{ store['store_id'] }}][gaid]" value="{{ desc[store['store_id']]['gaid'] }}" class="form-control" />
                </div>
              </div>			  
            </div>
            {% endfor %}
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">$('#tabstores a:first').tab('show');</script> 
{{ footer }}