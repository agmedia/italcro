<div class="widget carousel-widget grid{% if contrast %} contrast-bg{% endif %}" {% if use_margin %} style="margin-bottom:{{ margin }}"{% endif %}>
{% if block_title %}
<!-- Block Title -->
<div class="widget-title">
    {% if title_preline %}<p class="pre-line">{{ title_preline }}</p>{% endif %}
    {% if title %}
        <p class="main-title"><span>{{ title }}</span></p>
        <p class="widget-title-separator"><i class="icon-line-cross"></i></p>
    {% endif %}
    {% if title_subline %}
    <p class="sub-line"><span>{{ title_subline }}</span></p>
    {% endif %}
</div>
{% endif %}
<div id="gallery" class="grid-holder carousel carousel_module cm_content module{{ module }}">

    {% if module == 1%}
  {% for banner in banners %}
  
<div class="item type-img cm_column eq_height">
    <a class="link" href="{{ banner.image }}">
         <div class="banner_wrap  ">
    <div class="zoom_image_wrap"> <img  src="{{ banner.image }}" alt="{{ banner.title }}" /></div>
    <div class="effect-holder"></div>
    <div class="banner_overlay">
        <div class="cm_item_wrapper pointer" >
            <div class="cm_item " style="padding: 10px 20px;position: absolute;bottom: 10px; left: 50%;transform: translate(-50%, -50%); background-color: rgba(0,0,0,.5)">
               {{ banner.title }}
            </div>
        </div>
    </div>
    </div>
    </a>
      </div>
  {% endfor %}


  {% else %}

    {% for banner in banners %}
    <div class="item text-center">
    {% if banner.link %}
        <a href="{{ banner.link }}"><img src="{{ banner.image }}" alt="{{ banner.title }}" class="display-inline-block bw" /></a>
    {% else %}
        <img src="{{ banner.image }}" alt="{{ banner.title }}" class="display-inline-block bw" />
    {% endif %}
    </div>
  {% endfor %}


  {% endif %}



</div> <!-- .grid-holder ends -->
<div class="clearfix"></div>
</div>




<script><!--
$('.grid-holder.carousel_module.module{{ module }}').slick({
{% if carousel_a %}
prevArrow: "<a class=\"arrow-left icon-arrow-left\"></a>",
