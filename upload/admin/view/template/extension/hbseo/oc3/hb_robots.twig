{{ header }}{{ column_left }} 
<!--Main Content block start-->
<div id="content">
  <!--Header Start-->
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <a id="save-button" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</a>
		<a id="restore-button" class="btn btn-warning"><i class="fa fa-refresh"></i> {{ button_restore }}</a>
        <a href="{{ doc_link }}" target="_blank" class="btn btn-default" aria-label="{{ button_doc }}"><i class="fa fa-book"></i> {{ button_doc }}</a>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i> {{ button_cancel }}</a>
      </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
  <!--Header End-->

  <!--Container Start -->
  <div class="container-fluid">
    <!-- Error/Success Messages -->
    {% if error_warning %} 
    <div class="alert alert-danger">
      <i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if success %} 
    <div class="alert alert-success">
      <i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div id="msgoutput"></div>

    <!--Panel Start-->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <i class="fa fa-file-text-o"></i> {{ heading_title }}
        </h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-hbr" class="form-horizontal">
          <div class="row">
            <!-- Textarea Section -->
            <div class="col-sm-4">
			  	<h4><i class="fa fa-file-text"></i> {{ text_original }}</h4>	
            	<textarea class="form-control" id="reference" name="hb_robots_editor" rows="30" disabled>{{ hb_robots_editor }}</textarea>
            </div>

			<div class="col-sm-4">
				<h4><i class="fa fa-pencil-square-o"></i> {{ text_modified }}</h4>	
              	<textarea class="form-control" id="editor" name="hb_robots_modified" rows="30">{{ hb_robots_editor }}</textarea>
            </div>

            <!-- Checkbox Section -->
            <div class="col-sm-4">
				<h4><i class="fa fa-wrench"></i> {{ text_rules }}</h4>
				<!-- Dynamic Checkboxes -->
				<div class="form-check">
					{% for rule in rules %}
						<input type="checkbox" class="form-check-input rule-checkbox" id="{{ rule.code }}" value="{{ rule.label }}" data-rule-code="{{ rule.code }}" {% if rule.checked %}checked{% endif %}>
						<label class="form-check-label" for="{{ rule.code }}">{{ rule.label }}</label><br>
					{% endfor %}
				</div>

            </div>
          </div>
        </form>
      </div>
    </div>
    <!--Panel End-->

    <!--Footer Credits-->
    <div class="container-fluid text-center">
      <span class="help">
        {{ heading_title }} - {{ extension_version }} &copy; 
        <a href="https://www.huntbee.com/">WWW.HUNTBEE.COM</a> | 
        <a href="https://www.huntbee.com/get-support">SUPPORT</a>
      </span>
    </div>
  </div>
  <!--Container End -->
</div>
<!--Main Content block end-->

<script type="text/javascript">
	$(".rule-checkbox").on("change", function () {
    const ruleCode = $(this).data("rule-code"); 
    const isChecked = $(this).is(":checked"); 
    const editorContent = $("#editor").val(); 

    $.ajax({
        url: "index.php?route={{ base_route }}/hb_robots/modifyRule&user_token={{ user_token }}", 
        type: "POST",
        data: {
            rule_code: ruleCode, 
            is_checked: isChecked, 
            content: editorContent 
        },
        dataType: "json",
        success: function (response) {
            if (response.success) {
                const decodedContent = $("<textarea>").html(response.updated_content).text();
                $("#editor").val(decodedContent); 
                console.log("Rule modification successful:", ruleCode);
            } else {
                console.error("Rule modification error:", response.error);
            }
        },
        error: function (xhr, ajaxOptions, thrownError) {
            console.error("AJAX Error:", thrownError, xhr.statusText, xhr.responseText);
        }
    });
});



$("#save-button").on("click", function () {
	$('#msgoutput').html('<center><i class="fa fa-circle-o-notch fa-spin fa-fw"></i></center>');

	const content = $("#editor").val(); // Get the modified content from the editor

	$.ajax({
		url: "index.php?route={{ base_route }}/hb_robots/save&user_token={{ user_token }}", // Update with your controller route
		type: "POST",
		data: { content: content },
		dataType: "json",
		success: function (json) {
			if (json['success']) {
				$('#msgoutput').html('<div class="alert alert-success"><i class="fa fa-check"></i>&nbsp;'+json['success']+'<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				$('#reference').load('index.php?route={{ base_route }}/hb_robots/present_file_content&user_token={{ user_token }}');
			} 
			
			if (json['error']) {
				$('#msgoutput').html('<div class="alert alert-danger">'+json['error']+'<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
});

$("#restore-button").on("click", function () {
	if (confirm("{{ text_confirm }}")) {
	$('#msgoutput').html('<center><i class="fa fa-circle-o-notch fa-spin fa-fw"></i></center>');

	const content = $("#editor").val(); // Get the modified content from the editor

	$.ajax({
		url: "index.php?route={{ base_route }}/hb_robots/restore&user_token={{ user_token }}", // Update with your controller route
		dataType: "json",
		success: function (json) {
			if (json['success']) {
				$('#msgoutput').html('<div class="alert alert-success"><i class="fa fa-check"></i>&nbsp;'+json['success']+'<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				$('#reference').load('index.php?route={{ base_route }}/hb_robots/present_file_content&user_token={{ user_token }}');
			} 
			
			if (json['error']) {
				$('#msgoutput').html('<div class="alert alert-danger">'+json['error']+'<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
			}
		},
		error: function(xhr, ajaxOptions, thrownError) {
			alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
		}
	});
	}
});

</script>
{{ footer }}
