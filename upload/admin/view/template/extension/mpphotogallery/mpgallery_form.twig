{{ header }}{{ column_left }}
<div id="content" class="m-menu-wrap">
  <div class="container-fluid">
    <div class="page-header">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
    {{ mtabs }}
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_form }} {% if mpgallery_id %}- #{{ mpgallery_id }}{% endif %}</h3>
        <div class="pull-right">
        <button type="submit" form="form-gallery" class="btn btn-success"><i class="fa fa-save"></i> {{ button_save }}</button>
        <a href="{{ cancel }}" class="btn btn-default"><i class="fa fa-times"></i> {{ button_cancel }}</a></div>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-gallery" class="form-horizontal">
          {% if error_warning %}
          <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
          {% endif %}
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-languagesetting" data-toggle="tab">{{ tab_languagesetting }}</a></li>
            <li><a href="#tab-seo" data-toggle="tab">{{ tab_seo }}</a></li>
            <li><a href="#tab-albumsetting" data-toggle="tab">{{ tab_albumsetting }}</a></li>
            <li><a href="#tab-photo" data-toggle="tab">{{ tab_photo }}</a></li>
            <li><a href="#tab-video" data-toggle="tab">{{ tab_video }}</a></li>
            <!-- // gallery for product task starts -->
            <li><a href="#tab-links" data-toggle="tab">{{ tab_links }}</a></li>
            <!-- // gallery for product task ends -->
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-languagesetting">
              <ul class="nav nav-tabs" id="language">
                {% for language in languages %}
                <li><a href="#language{{ language.language_id }}" data-toggle="tab"><img src="{{ language.lang_flag }}" title="{{ language.name }}" /> {{ language.name }}</a></li>
                {% endfor %}
              </ul>
              <div class="tab-content">
                {% for language in languages %}
                <div class="tab-pane" id="language{{ language.language_id }}">
                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-title{{ language.language_id }}">{{ entry_title }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="mpgallery_description[{{ language.language_id }}][title]" value="{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].title : '' }}" placeholder="{{ entry_title }}" id="input-title{{ language.language_id }}" class="form-control" />
                      {% if (error_title[language.language_id]) %}
                      <div class="text-danger">{{ error_title[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="form-group hide">
                    <label class="col-sm-2 control-label" for="input-description{{ language.language_id }}">{{ entry_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="mpgallery_description[{{ language.language_id }}][description]" placeholder="{{ entry_description }}" id="input-description{{ language.language_id }}" class="form-control summernote" data-toggle="summernote" data-lang="{{ summernote }}">{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].description : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-top-description{{ language.language_id }}">{{ entry_top_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="mpgallery_description[{{ language.language_id }}][top_description]" placeholder="{{ entry_description }}" id="input-top-description{{ language.language_id }}" class="form-control summernote" data-toggle="summernote" data-lang="{{ summernote }}">{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].top_description : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-bottom-description{{ language.language_id }}">{{ entry_bottom_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="mpgallery_description[{{ language.language_id }}][bottom_description]" placeholder="{{ entry_description }}" id="input-bottom-description{{ language.language_id }}" class="form-control summernote" data-toggle="summernote" data-lang="{{ summernote }}">{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].bottom_description : '' }}</textarea>
                    </div>
                  </div>

                  <div class="form-group required">
                    <label class="col-sm-2 control-label" for="input-meta-title{{ language.language_id }}">{{ entry_meta_title }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="mpgallery_description[{{ language.language_id }}][meta_title]" value="{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].meta_title : '' }}" placeholder="{{ entry_meta_title }}" id="input-meta-title{{ language.language_id }}" class="form-control" />
                      {% if (error_meta_title[language.language_id]) %}
                      <div class="text-danger">{{ error_meta_title[language.language_id] }}</div>
                      {% endif %}
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-description{{ language.language_id }}">{{ entry_meta_description }}</label>
                    <div class="col-sm-10">
                      <textarea name="mpgallery_description[{{ language.language_id }}][meta_description]" rows="5" placeholder="{{ entry_meta_description }}" id="input-meta-description{{ language.language_id }}" class="form-control">{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].meta_description : '' }}</textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-meta-keyword{{ language.language_id }}">{{ entry_meta_keyword }}</label>
                    <div class="col-sm-10">
                      <textarea name="mpgallery_description[{{ language.language_id }}][meta_keyword]" rows="5" placeholder="{{ entry_meta_keyword }}" id="input-meta-keyword{{ language.language_id }}" class="form-control">{{ (mpgallery_description[language.language_id]) ? mpgallery_description[language.language_id].meta_keyword : '' }}</textarea>
                    </div>
                  </div>
                </div>
                {% endfor %}
              </div>
            </div>
            <!-- // 07-05-2022: updation task start -->
            <div class="tab-pane" id="tab-seo">
              {{ mpgallery_seo_url }}
            </div>
            <!-- // 07-05-2022: updation task end -->
						<div class="tab-pane" id="tab-albumsetting">
              <div class="form-group">
                <label class="col-sm-2 control-label">{{ entry_image }}</label>
                <div class="col-sm-10"><a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                  <input type="hidden" name="image" value="{{ image }}" id="input-image" />
                </div>
              </div>
							<div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
                <div class="col-sm-10">
                  <select name="status" id="input-status" class="form-control">
                    {% if status %}
                    <option value="1" selected="selected">{{ text_enabled }}</option>
                    <option value="0">{{ text_disabled }}</option>
                    {% else %}
                    <option value="1">{{ text_enabled }}</option>
                    <option value="0" selected="selected">{{ text_disabled }}</option>
                    {% endif %}
                  </select>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-sort-order">{{ entry_sort_order }}</label>
                <div class="col-sm-10">
                  <input type="text" name="sort_order" value="{{ sort_order }}" placeholder="{{ entry_sort_order }}" id="input-sort-order" class="form-control" />
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-photo">
              <div class="form-group">
                <div class="col-sm-12">
                  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ help_photo_image }}</div>
                </div>
                <label class="col-sm-2 control-label">{{ entry_photo_image }}</label>
                <div class="col-sm-5">
                  <div class="input-group">
                    <input type="text" name="width" value="{{ width }}" placeholder="{{ entry_width }}" class="form-control" />
                    <span class="input-group-btn"><button type="button" class="btn btn-primary"><i class="fa fa-arrows-h"></i></button></span>
                  </div>
                </div>
                <div class="col-sm-5">
                  <div class="input-group">
                    <input type="text" name="height" value="{{ height }}" placeholder="{{ entry_height }}" class="form-control" />
                    <span class="input-group-btn"><button type="button" class="btn btn-primary"><i class="fa fa-arrows-v"></i></button></span>
                  </div>
                </div>
              </div>
              <div class="table-responsive">
                <table id="photo-value" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left required">{{ entry_title }}</td>
                      <td class="text-left">{{ entry_photo }}</td>
                      <td class="text-center">{{ entry_link }}</td>
                      <td class="text-center">{{ entry_highlight }}</td>
                      <td class="text-right">{{ entry_sort_order }}</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>
                    {% set mpgallery_photo_row = 0 %}
                    {% for mpgallery_photo in mpgallery_photos %}
                    <tr id="photo-value-row{{ mpgallery_photo_row }}">
                      <td class="text-left"><input type="hidden" name="mpgallery_photo[{{ mpgallery_photo_row }}][mpgallery_photo_id]" value="{{ mpgallery_photo.mpgallery_photo_id }}" />
                      {% for language in languages %}
                      <div class="input-group"><span class="input-group-addon"><img src="{{ language.lang_flag }}" title="{{ language.name }}" /></span>
                        <input type="text" name="mpgallery_photo[{{ mpgallery_photo_row }}][mpgallery_photo_description][{{ language.language_id }}][name]" value="{{ (mpgallery_photo.mpgallery_photo_description[language.language_id]) ? mpgallery_photo.mpgallery_photo_description[language.language_id].name : '' }}" placeholder="{{ entry_title }}" class="form-control" />
                      </div>
                      {% if (error_mpgallery_photo[mpgallery_photo_row][language.language_id]) %}
                      <div class="text-danger">{{ error_mpgallery_photo[mpgallery_photo_row][language.language_id] }}</div>
                      {% endif %}
                      {% endfor %}
                      </td>
                      <td class="text-left"><a href="" id="thumb-photo{{ mpgallery_photo_row }}" data-toggle="image" class="img-thumbnail"><img src="{{ mpgallery_photo.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                        <input type="hidden" name="mpgallery_photo[{{ mpgallery_photo_row }}][photo]" value="{{ mpgallery_photo.photo }}" id="input-photo{{ mpgallery_photo_row }}" /></td>
                      <td class="text-right"><input type="text" name="mpgallery_photo[{{ mpgallery_photo_row }}][link]" value="{{ mpgallery_photo.link }}" placeholder="{{ entry_link }}" class="form-control" /></td>
                      <td class="text-center" width="15%">
                          <input type="checkbox" name="mpgallery_photo[{{ mpgallery_photo_row }}][highlight]" class="highlight" value="1" {% if mpgallery_photo.highlight %}checked="checked" data-highlight="1"{% else %}data-highlight="0"{% endif %} />
                      </td>
                      <td class="text-right"><input type="text" name="mpgallery_photo[{{ mpgallery_photo_row }}][sort_order]" value="{{ mpgallery_photo.sort_order }}" class="form-control" /></td>
                      <td class="text-left"><button type="button" onclick="$('#photo-value-row{{ mpgallery_photo_row }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></td>
                    </tr>
                    {% set mpgallery_photo_row = mpgallery_photo_row + 1 %}
                    {% endfor %}
                 </tbody>
                 <tfoot>
                   <tr>
                      <td colspan="5"></td>
                      <td class="text-left"><button type="button" onclick="addGalleryphoto();" class="btn btn-primary"><i class="fa fa-plus-circle"></i> {{ button_photo_add }}</button></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <div class="tab-pane" id="tab-video">
              <div class="form-group">
                <div class="col-sm-12">
                  <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ help_video_thumb_image }}</div>
                </div>
                <label class="col-sm-2 control-label">{{ entry_video_thumb_size }}</label>
                <div class="col-sm-5">
                  <div class="input-group">
                  <input type="text" name="video_width" value="{{ video_width }}" placeholder="{{ entry_width }}" class="form-control" />
                  <span class="input-group-btn">
                  <button type="button" class="btn btn-primary"><i class="fa fa-arrows-h"></i></button>
                  </span></div>
                </div>
                <div class="col-sm-5">
                  <div class="input-group">
                  <input type="text" name="video_height" value="{{ video_height }}" placeholder="{{ entry_height }}" class="form-control" />
                  <span class="input-group-btn">
                  <button type="button" class="btn btn-primary"><i class="fa fa-arrows-v"></i></button>
                  </span></div>
                </div>
              </div>
              <div class="table-responsive">
                <table id="video-value" class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <td class="text-left required">{{ entry_title }}</td>
                      <td class="text-left">{{ entry_video_thumb }}</td>
                      <td class="text-center">{{ entry_link }}</td>
                      <td class="text-center">{{ entry_highlight }}</td>
                      <td class="text-right">{{ entry_sort_order }}</td>
                      <td></td>
                    </tr>
                  </thead>
                  <tbody>
                    {% set mpgallery_video_row = 0 %}
                    {% for mpgallery_video in mpgallery_videos %}
                    <tr id="video-value-row{{ mpgallery_video_row }}">
                      <td class="text-left"><input type="hidden" name="mpgallery_video[{{ mpgallery_video_row }}][mpgallery_video_id]" value="{{ mpgallery_video.mpgallery_video_id }}" />
                      {% for language in languages %}
                      <div class="input-group"><span class="input-group-addon"><img src="{{ language.lang_flag }}" title="{{ language.name }}" /></span>
                        <input type="text" name="mpgallery_video[{{ mpgallery_video_row }}][mpgallery_video_description][{{ language.language_id }}][name]" value="{{ (mpgallery_video.mpgallery_video_description[language.language_id]) ? mpgallery_video.mpgallery_video_description[language.language_id].name : '' }}" placeholder="{{ entry_title }}" class="form-control" />
                      </div>
                      {% if (error_mpgallery_video[mpgallery_video_row][language.language_id]) %}
                      <div class="text-danger">{{ error_mpgallery_video[mpgallery_video_row][language.language_id] }}</div>
                      {% endif %}
                      {% endfor %}
                      </td>
                      <td class="text-left"><a href="" id="thumb-video{{ mpgallery_video_row }}" data-toggle="image" class="img-thumbnail"><img src="{{ mpgallery_video.thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
                        <input type="hidden" name="mpgallery_video[{{ mpgallery_video_row }}][video_thumb]" value="{{ mpgallery_video.video_thumb }}" id="input-video-thumb{{ mpgallery_video_row }}" /></td>
                      <td class="text-right"><input type="text" name="mpgallery_video[{{ mpgallery_video_row }}][link]" value="{{ mpgallery_video.link }}" placeholder="{{ entry_link }}" class="form-control" /></td>
                      <td class="text-center" width="15%">
                        <input type="checkbox" name="mpgallery_video[{{ mpgallery_video_row }}][highlight]" class="video_highlight" value="1" {% if mpgallery_video.highlight %}checked="checked" data-highlight="1"{% else %}data-highlight="0"{% endif %} />
                      </td>
                      <td class="text-right"><input type="text" name="mpgallery_video[{{ mpgallery_video_row }}][sort_order]" value="{{ mpgallery_video.sort_order }}" class="form-control" /></td>
                      <td class="text-left"><button type="button" onclick="$('#video-value-row{{ mpgallery_video_row }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></td>
                    </tr>
                    {% set mpgallery_video_row = mpgallery_video_row + 1 %}
                    {% endfor %}
                 </tbody>
                 <tfoot>
                   <tr>
                      <td colspan="5"></td>
                      <td class="text-left"><button type="button" onclick="addGalleryVideo();" class="btn btn-primary"><i class="fa fa-plus-circle"></i> {{ button_video_add }}</button></td>
                    </tr>
                  </tfoot>
                </table>
              </div>
            </div>
            <!-- // gallery for product task starts -->
            <!-- // 07-05-2022: updation task start -->
            <div class="tab-pane" id="tab-links">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-product">{{ entry_product }}<br/><span class="help">{{ help_product }}</span></label>
                <div class="col-sm-10">
                  <input type="text" name="product" value="" placeholder="{{ entry_product }}" id="input-product" class="form-control" /> <br/>
                  <div class="table-responsive">
                    <table id="gallery-product" class="table table-striped table-bordered table-hover">
                      <thead>
                        <tr>
                          <td width="15%" class="text-center">{{ column_product_image }}</td>
                          <td width="30%" class="text-center">{{ column_product_name }}</td>
                          <td width="20%" class="text-center">{{ column_mpgallery_video }}</td>
                          <td width="20%" class="text-center">{{ column_mpgallery_image }}</td>
                          <td width="15%" class="text-center">{{ column_remove }}</td>
                        </tr>
                      </thead>
                      <tbody>
                      {% for mpgallery_product in mpgallery_products %}
                      <tr id="gallery-product{{ mpgallery_product.product_id }}">
                        <td width="15%" class="text-center"><img src="{{ mpgallery_product.thumb }}" alt="{{ mpgallery_product.name }}"><input type="hidden" name="mpgallery_products[{{ mpgallery_product.product_id }}][product_id]" value="{{ mpgallery_product.product_id }}" /></td>
                        <td width="30%" class="text-center">{{ mpgallery_product.name }}</td>
                        <td width="20%" class="text-center">
                          <select name="mpgallery_products[{{ mpgallery_product.product_id }}][video]" id="input-mpgallery_videos{{ mpgallery_product.product_id }}" class="form-control">
                            {% if mpgallery_product.video == '1' %}
                            <option value="1" selected="selected">{{ text_yes }}</option>
                            <option value="0">{{ text_no }}</option>
                            {% else %}
                            <option value="1">{{ text_yes }}</option>
                            <option value="0" selected="selected">{{ text_no }}</option>
                            {% endif %}
                          </select>
                        </td>
                        <td width="20%" class="text-center">
                          <select name="mpgallery_products[{{ mpgallery_product.product_id }}][image]" id="input-mpgallery_images{{ mpgallery_product.product_id }}" class="form-control">
                            {% if mpgallery_product.image == '1' %}
                            <option value="1" selected="selected">{{ text_yes }}</option>
                            <option value="0">{{ text_no }}</option>
                            {% else %}
                            <option value="1">{{ text_yes }}</option>
                            <option value="0" selected="selected">{{ text_no }}</option>
                            {% endif %}
                          </select>
                        </td>
                        <td width="15%" class="text-center"><button type="button" onclick="$('#gallery-product{{ mpgallery_product.product_id }}').remove();" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></td>
                      </tr>
                      {% endfor %}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
            <!-- // 07-05-2022: updation task end -->
            <!-- // gallery for product task ends -->
          </div>
        </form>
      </div>
    </div>
  </div>
