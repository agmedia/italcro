{{ header }}{{ column_left }}
<div id="content" class="m-menu-wrap">
  <div class="container-fluid">
    <div class="page-header">
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
    {{ mtabs }}
  </div>
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-list"></i> {{ text_list }}</h3>
        <div class="pull-right">
        <button type="button" class="btn btn-danger" onclick="confirm('{{ text_confirm }}') ? $('#form-gallery').submit() : false;"><i class="fa fa-trash-o"></i> {{ button_delete }}</button>
        </div>
      </div>
      <div class="panel-body">
        <form action="{{ delete }}" method="post" enctype="multipart/form-data" id="form-gallery">
          {% if error_warning %}
          <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
          {% endif %}
          {% if success %}
          <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
          {% endif %}
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                  <td class="text-left">{{ column_image }}</td>
                  <td class="text-left">{% if sort == 'gd.title' %}
                    <a href="{{ sort_name }}" class="{{ order|lower }}">{{ column_name }}</a>
                    {% else %}
                    <a href="{{ sort_name }}">{{ column_name }}</a>
                    {% endif %}</td>
                  <td class="text-left">{% if sort == 'g.viewed' %}
                    <a href="{{ sort_viewed }}" class="{{ order|lower }}">{{ column_viewed }}</a>
                    {% else %}
                    <a href="{{ sort_viewed }}">{{ column_viewed }}</a>
                    {% endif %}</td>
                  <td class="text-right">{% if sort == 'g.sort_order' %}
                    <a href="{{ sort_sort_order }}" class="{{ order|lower }}">{{ column_sort_order }}</a>
                    {% else %}
                    <a href="{{ sort_sort_order }}">{{ column_sort_order }}</a>
                    {% endif %}</td>
                  <td class="text-right">{% if sort == 'g.status' %}
                    <a href="{{ sort_status }}" class="{{ order|lower }}">{{ column_status }}</a>
                    {% else %}
                    <a href="{{ sort_status }}">{{ column_status }}</a>
                    {% endif %}</td>
                  <td class="text-right">{{ column_action }}</td>
                </tr>
              </thead>
              <tbody>
                {% if galleries %}
                {% for gallery in galleries %}
                <tr>
                  <td class="text-center">{% if gallery.mpgallery_id in selected %}
                    <input type="checkbox" name="selected[]" value="{{ gallery.mpgallery_id }}" checked="checked" />
                    {% else %}
                    <input type="checkbox" name="selected[]" value="{{ gallery.mpgallery_id }}" />
                    {% endif %} <br/>#{{ gallery.mpgallery_id }}</td>
                  <td class="text-left"><img src="{{ gallery.thumb }}" class="img-responsive" alt="{{ gallery.title }}" /></td>
                  <td class="text-left">{{ gallery.title }}</td>
                  <td class="text-left">{{ gallery.viewed }}</td>
                  <td class="text-right">{{ gallery.sort_order }}</td>

                  <td class="text-right"><label class="label {% if gallery.status %}label-success{% else %}label-danger{% endif %}">{{ gallery.status_str }}</label></td>
                  <td class="text-right"><a href="{{ gallery.edit }}" class="btn btn-primary"><i class="fa fa-pencil"></i> {{ button_edit }}</a> <a target="_blank" href="{{ gallery.view }}" class="btn btn-primary"><i class="fa fa-eye"></i> {{ button_view }}</a></td>
                </tr>
                {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="7">{{ text_no_results }}</td>
                </tr>
                {% endif %}
              </tbody>
            </table>
          </div>
        </form>
        <div class="row">
          <div class="col-sm-6 text-left">{{ pagination }}</div>
          <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}