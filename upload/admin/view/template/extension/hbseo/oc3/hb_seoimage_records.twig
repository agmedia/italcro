 <div class="table-responsive">
	<table class="table table-bordered table-hover">
	<thead>
		<tr>
		<td class="text-center">ID</td>
		<td class="text-left">OLD PATH</td>
		<td class="text-left">NEW PATH</td>
		<td class="text-center">STATUS</td>
		<td class="text-right">DATE ADDED</td>
	  </tr>
	</thead>
	<tbody>
		{% if (records) %} 
		{% for record in records %} 
		<tr>
		<td class="text-center">{{ record['id'] }}</td>
		<td class="text-left">{{ record['old_path'] }}</td>
		<td class="text-left">{{ record['new_path'] }}</td>
		<td class="text-center">{{ record['status'] }}</td>
		<td class="text-right">{{ record['date_added'] }}</td>
		</tr>
		{% endfor %} 
		{% else %} 
		<tr><td class="text-center" colspan="5">No Records Found</td></tr>
		{% endif %}				
	</tbody>
	</table>
</div>

<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>