{{ header }}{{ column_left }} 

<div id="content">
<!--Header Start-->
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-hb-snippets" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i> {{ button_save }}</button>
		<a href="{{ doc_link }}" target="_blank" class="btn btn-default"><i class="fa fa-book"></i>&nbsp;{{ button_docs }}</a>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
	  </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %} 
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %} 
      </ul>
    </div>
  </div>
 <!--Header End--> 
 
  <div class="container-fluid">
    <!--Start - Error / Success Message if any -->
	{% if (error_warning) %} 
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
    {% if (success) %} 
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }} 
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %} 
	<!--End - Error / Success Message if any -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ heading_title }}</h3>
			{% if (stores) %} 
			<div class="pull-right">
			<select id="store">
				<option value="0" {{ store_id == 0?'selected':'' }}>Default Store</option>
				{% for store in stores %} 
					<option value="{{ store['store_id'] }}" {{ store_id == store['store_id']?'selected':'' }}>{{ store['name'] }}</option>
				{% endfor %} 
			</select>
			</div>
			{% endif %} 
      </div>
      <div class="panel-body">
		  <div id="result-console"></div>
          <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-hb-snippets" class="form-horizontal">
		     <ul class="nav nav-tabs">
                <li class="active"><a href="#tab-structured-data" data-toggle="tab"><i class="fa fa-google"></i> {{ tab_sd }}</a></li>
				<li><a href="#tab-opengraph" data-toggle="tab"><i class="fa fa-facebook"></i> {{ tab_og }}</a></li>
				<li><a href="#tab-twittercards" data-toggle="tab"><i class="fa fa-twitter"></i> {{ tab_tc }}</a></li>
	          </ul>
			  <div class="tab-content">
			  
					<div class="tab-pane active" id="tab-structured-data">
					 	<!-- Product Structured Data -->
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
									<a class="collapsed" data-toggle="collapse" data-parent="#accordion-option" href="#collapse-product">
										<i class="fa fa-list"></i>&nbsp;{{ acc_product }}
										<i class="fa fa-caret-down pull-right"></i>
									</a>
								</h4>
							</div>
							<div id="collapse-product" class="panel-collapse collapse">
								<div class="panel-body">
									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_product_structured_data }}</label>
										<div class="col-sm-9">
											<div class="checkbox">
												<label>
													<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_prod_enable" value="1" id="hb_snippets_prod_enable" {% if hb_snippets_prod_enable %}checked{% endif %}>
												</label>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_display_tax }}</label>
										<div class="col-sm-9">
											<div class="checkbox">
												<label>
													<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_incl_tax" value="1" id="hb_snippets_incl_tax" {% if hb_snippets_incl_tax %}checked{% endif %}>
												</label>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_priceValidUntil }}</label>
										<div class="col-sm-3">
											<div class="checkbox">
												<label>
													<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_pricevalid" value="1" id="hb_snippets_pricevalid" {% if hb_snippets_pricevalid %}checked{% endif %}>
												</label>
											</div>
										</div>

										<label class="col-sm-3 control-label">{{ text_priceValidUntil_default }}</label>
										<div class="col-sm-3">
											<div class="input-group">
												<input type="text" id="hb_snippets_pricevaliddate" name="hb_snippets_pricevaliddate" data-date-format="YYYY-MM-DD" value="{{ hb_snippets_pricevaliddate }}" class="form-control date" />
												<span class="input-group-addon"><i class="fa fa-calendar"></i></span>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_default_brand }}</label>
										<div class="col-sm-9">
											<input type="text" name="hb_snippets_brand" class="form-control" value="{{ hb_snippets_brand }}">
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_product_description_type }}</label>
										<div class="col-sm-9">
											<select name="hb_snippets_description" class="form-control">
												<option value="meta_description" {{ hb_snippets_description == 'meta_description'? 'selected':'' }}>Meta Description</option>
												<option value="description" {{ hb_snippets_description == 'description'? 'selected':'' }}>Description</option>
											</select>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_availability }}</label>
										<div class="col-sm-9">
											{% for stock_status in stock_statuses %}
											<div class="input-group">
												<span class="input-group-addon">{{ stock_status['name'] }}</span>
												<select name="hb_snippets_stock[{{ stock_status['stock_status_id'] }}]" class="form-control">
													{% for avail in availability %}
													<option value="{{ avail }}" {{ hb_snippets_stock[stock_status['stock_status_id']] is defined and hb_snippets_stock[stock_status['stock_status_id']] == avail? 'selected':'' }}>{{ avail }}</option>
													{% endfor %}
												</select>
											</div><br />
											{% endfor %}
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_shipping }}</label>
										<div class="col-sm-9">
											<div class="checkbox">
												<label>
													<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_shipping" value="1" {% if hb_snippets_shipping %}checked{% endif %}>
												</label>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_shipping_rule }}</label>
										<div class="col-sm-9">
											<div class="alert alert-info">{{ text_shipping_rule_help }}</div>
											<a onclick="addShipping();" class="btn btn-sm btn-primary">
												<i class="fa fa-plus"></i>&nbsp;{{ btn_add_shipping }}
											</a> <br /><br />
											<div id="shipping">
												{% set shipping_row = 0 %} 
												{% for rule in hb_snippets_shipping_rules %}							
													<div id="shipping-row{{ shipping_row }}">
													<div class="col-sm-9"><input type="text" placeholder="0-100:US-NY:5:USD:0-1:1-7" name="hb_snippets_shipping_rules[{{ shipping_row }}]" class="form-control" value="{{ rule }}"></div>
													<div class="col-sm-3">
													<button type="button" onclick="$('#shipping-row{{ shipping_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></div>
													</div><br><br><br>
													{% set shipping_row = shipping_row + 1 %} 
												{% endfor %}
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_return }}</label>
										<div class="col-sm-9">
											<div class="checkbox">
												<label>
													<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_return" value="1" {% if hb_snippets_return %}checked{% endif %}>
												</label>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_return_rule }}</label>
										<div class="col-sm-9">
											<div class="alert alert-info">{{ text_return_rule_help }}</div>
											<a onclick="addReturn();" class="btn btn-sm btn-primary">
												<i class="fa fa-plus"></i>&nbsp;{{ btn_add_return }}
											</a> <br /><br />
											<div id="return">
												{% set return_row = 0 %} 
												{% for rule in hb_snippets_return_rules %}							
													<div id="return-row{{ return_row }}">
													<div class="col-sm-9"><input type="text" placeholder="US:MRFRW:60:RBM:RFCR:10:USD" name="hb_snippets_return_rules[{{ return_row }}]" class="form-control" value="{{ rule }}"></div>
													<div class="col-sm-3">
													<button type="button" onclick="$('#return-row{{ return_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></div>
													</div><br><br><br>
													{% set return_row = return_row + 1 %} 
												{% endfor %}
											</div>
										</div>
									</div>

								</div>
							</div>
						</div>
						<!-- Product Structured Data End -->

						<!--breadcrumb structured data-->
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
								<a data-toggle="collapse" data-parent="#accordion-option" href="#collapse-breadcrumb" class="collapsed" aria-expanded="false">
									<i class="fa fa-arrow-right"></i>&nbsp;{{ acc_breadcrumb }}
									<i class="fa fa-caret-down pull-right"></i>
								</a>
								</h4>
							</div>

							<div id="collapse-breadcrumb" class="panel-collapse collapse" aria-expanded="false">
								<div class="panel-body">
								
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_breadcrumblist_enable }}</label>
									<div class="col-sm-9">
									<div class="checkbox">
										<label>
										<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_bc_enable" value="1" id="hb_snippets_bc_enable" {% if hb_snippets_bc_enable %} checked{% endif %}/>
										</label>
									</div>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_breadcrumblist_type }}</label>
									<div class="col-sm-9">
									<select name="hb_snippets_bc_type" class="form-control">
										<option value="smart" {{ hb_snippets_bc_type == 'smart' ? 'selected' : '' }}>{{ text_breadcrumblist_type_smart }}</option>
										<option value="original" {{ hb_snippets_bc_type == 'original' ? 'selected' : '' }}>{{ text_breadcrumblist_type_original }}</option>
									</select>
									</div>
								</div>

								</div>
							</div>
						</div>

						<!--image metadata structured data-->
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
								<a data-toggle="collapse" data-parent="#accordion-option" href="#collapse-image" class="collapsed" aria-expanded="false">
									<i class="fa fa-picture-o"></i>&nbsp;{{ acc_image_metadata }}
									<i class="fa fa-caret-down pull-right"></i>
								</a>
								</h4>
							</div>

							<div id="collapse-image" class="panel-collapse collapse" aria-expanded="false">
								<div class="panel-body">
								
								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_enable }}</label>
									<div class="col-sm-9">
										<div class="checkbox">
											<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_img_enable" value="1" {% if hb_snippets_img_enable %} checked{% endif %}/>
										</div>
										<div class="help-block">{{ text_image_enable_help }}</div>
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_license }}</label>
									<div class="col-sm-9">
										<input type="text" name="hb_snippets_img_license" class="form-control" value="{{ hb_snippets_img_license }}" placeholder="{{ text_image_license_placeholder }}">
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_acquire_license }}</label>
									<div class="col-sm-9">
										<input type="text" name="hb_snippets_img_acquire" class="form-control" value="{{ hb_snippets_img_acquire }}" placeholder="{{ text_image_acquire_license_placeholder }}">
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_credittext }}</label>
									<div class="col-sm-9">
										<input type="text" name="hb_snippets_img_credit" class="form-control" value="{{ hb_snippets_img_credit }}" placeholder="{{ text_image_credittext_placeholder }}">
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_creator }}</label>
									<div class="col-sm-9">
										<input type="text" name="hb_snippets_img_creator" class="form-control" value="{{ hb_snippets_img_creator }}" placeholder="{{ text_image_creator_placeholder }}">
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">{{ text_image_copyright }}</label>
									<div class="col-sm-9">
										<input type="text" name="hb_snippets_img_copyright" class="form-control" value="{{ hb_snippets_img_copyright }}" placeholder="{{ text_image_copyright_placeholder }}">
									</div>
								</div>

								</div>
							</div>
						</div>

						<!-- home structured data -->
						<div class="panel panel-default">
							<div class="panel-heading">
								<h4 class="panel-title">
								<a data-toggle="collapse" data-parent="#accordion-option" href="#collapse-home" class="collapsed" aria-expanded="false">
									<i class="fa fa-home"></i>&nbsp;{{ acc_home }}
									<i class="fa fa-caret-down pull-right"></i>
								</a>
								</h4>
							</div>

							<div id="collapse-home" class="panel-collapse collapse" aria-expanded="false">
								<div class="panel-body">								
									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_home_enable }}</label>
										<div class="col-sm-9">
											<div class="checkbox">
												<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_kg_enable" value="1" id="hb_snippets_kg_enable" {% if hb_snippets_kg_enable %} checked{% endif %}/>
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_vat }}</label>
										<div class="col-sm-9">
											<input type="text" name="hb_snippets_vat" class="form-control" value="{{ hb_snippets_vat }}">
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_logo }}</label>
										<div class="col-sm-9">
											<a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ logo_thumb }}" alt="" title="" data-placeholder="{{ placeholder }}" /></a>
											<input type="hidden" name="hb_snippets_logo" value="{{ hb_snippets_logo }}" id="input-image" />
											{% if (error_logo) %} 
											<div class="text-danger">{{ error_logo }}</div>
											{% endif %} 
											<div class="help-block">{{ text_logo_help }}</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_search_enable }}</label>
										<div class="col-sm-9">
										<div class="checkbox">
											<label>
											<input type="checkbox" data-toggle="toggle" data-onstyle="success" name="hb_snippets_search_enable" value="1" id="hb_snippets_search_enable" {% if hb_snippets_search_enable %} checked{% endif %}/>
											</label>
										</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_contacts }}</label>
										<div class="col-sm-9">
										<a onclick="addContact();" class="btn btn-sm btn-primary">
											<i class="fa fa-plus"></i>&nbsp;{{ btn_contact_number }}
										</a> <br /><br />
										<div id="corp_contact">
											{% set contact_row = 0 %} 
											{% if (hb_snippets_contact) %} 
											{% for contact in hb_snippets_contact %}							
												<div id="contact-row{{ contact_row }}">
													<div class="col-sm-4"><input type="text" placeholder="+1-401-555-1212" name="hb_snippets_contact[{{ contact_row }}][n]" class="form-control" value="{{ contact['n'] }}"></div>
													<div class="col-sm-4"><select name="hb_snippets_contact[{{ contact_row }}][t]" class="form-control">
													<option {{ contact.t == 'Customer Service'? 'selected':'' }} >Customer Service</option>
													<option {{ contact.t == 'Customer Support'? 'selected':'' }} >Customer Support</option>
													<option {{ contact.t == 'Technical Support'? 'selected':'' }} >Technical Support</option>
													<option {{ contact.t == 'Billing Support'? 'selected':'' }} >Billing Support</option>
													<option {{ contact.t == 'Bill Payment'? 'selected':'' }} >Bill Payment</option>
													<option {{ contact.t == 'Sales'? 'selected':'' }} >Sales</option>
													<option {{ contact.t == 'Reservations'? 'selected':'' }} >Reservations</option>
													<option {{ contact.t == 'Credit Card Support'? 'selected':'' }} >Credit Card Support</option>
													<option {{ contact.t == 'Emergency'? 'selected':'' }} >Emergency</option>
													<option {{ contact.t == 'Baggage Tracking'? 'selected':'' }} >Baggage Tracking</option>
													<option {{ contact.t == 'Roadside Assistance'? 'selected':'' }} >Roadside Assistance</option>
													<option {{ contact.t == 'Package Tracking'? 'selected':'' }} >Package Tracking</option>
													</select>
													</div>
													<div class="col-sm-4">
													<button type="button" onclick="$('#contact-row{{ contact_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></div>
													</div>
													<br /><br /><br />
												{% set contact_row = contact_row + 1 %} 
											{% endfor %}	
											{% endif %}	
										</div>
										<div class="help-block">{{ text_contacts_help }}</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_emails }}</label>
										<div class="col-sm-9">
											<a onclick="addEmail();" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>&nbsp;{{ btn_add_email }}</a> <br /><br />
											<div id="corp_email">
												{% set email_row = 0 %} 
												{% for email in hb_snippets_emails %}							
													<div id="email-row{{ email_row }}">
														<div class="col-sm-4"><input type="text" placeholder="support@exampleonlinestore.com" name="hb_snippets_emails[{{ email_row }}][email]" class="form-control" value="{{ email.email }}"></div>
														<div class="col-sm-4">
															<select name="hb_snippets_emails[{{ email_row }}][type]" class="form-control">
																<option {{ email.type == 'customer service'? 'selected':'' }}>customer service</option>
																<option {{ email.type == 'support'? 'selected':'' }}>support</option>
																<option {{ email.type == 'sales'? 'selected':'' }}>sales</option>
																<option {{ email.type == 'billing'? 'selected':'' }}>billing</option>
																<option {{ email.type == 'technical support'? 'selected':'' }}>technical support</option>
																<option {{ email.type == 'reservation'? 'selected':'' }}>reservation</option>
																<option {{ email.type == 'returns'? 'selected':'' }}>returns</option>
																<option {{ email.type == 'complaints'? 'selected':'' }}>complaints</option>
																<option {{ email.type == 'press'? 'selected':'' }}>press</option>
																<option {{ email.type == 'general'? 'selected':'' }}>general</option>
															</select>
														</div>
														<div class="col-sm-4">
															<button type="button" onclick="$('#email-row{{ email_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></div>
														</div>
														<br /><br /><br />
													{% set email_row = email_row + 1 %} 
												{% endfor %}	
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_social }}</label>
										<div class="col-sm-9">
											<a onclick="addSocial();" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>&nbsp;{{ btn_add_social }}</a> <br /><br />
											<div id="corp_social">
												{% set social_row = 0 %} 
												{% if (hb_snippets_socials) %} 
												{% for social in hb_snippets_socials %}							
													<div id="social-row{{ social_row }}">
													<div class="col-sm-9"><input type="text" placeholder="https://www.facebook.com/your-profile" name="hb_snippets_socials[{{ social_row }}]" class="form-control" value="{{ social }}"></div>
													<div class="col-sm-3">
													<button type="button" onclick="$('#social-row{{ social_row }}').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i> {{ button_remove }}</button></div>
													</div><br><br><br>
													{% set social_row = social_row + 1 %} 
												{% endfor %}	
												{% endif %}	
											</div>
										</div>
									</div>

									<div class="form-group">
										<label class="col-sm-3 control-label">{{ text_payment }}</label>
										<div class="col-sm-9">
											<a onclick="addPayment();" class="btn btn-sm btn-primary"><i class="fa fa-plus"></i>&nbsp;{{ btn_add_payment }}</a> <br /><br />
											<div id="payment">
												{% set payment_row = 0 %} 
												{% if (hb_snippets_payment) %} 
