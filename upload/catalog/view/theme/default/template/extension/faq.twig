{{ header }}
<div class="bread_crumb">
 <div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
 </div>
</div>
<div itemscope itemtype="https://schema.org/FAQPage" class="container">
  <div class="wrap">
	<div class="inner-wrap">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
		   <h1 id="page-title">{{ heading_title }}</h1>
		
		  	{% for keys, result in results %}
		
				<div class="panel-group accordion">
		  		{% for key, sub in result.subfaqs %}

					<div itemscope itemprop="mainEntity" itemtype="https://schema.org/Question"  class="panel panel-default">
						<div itemprop="name" class="panel-heading">
						  <h4 class="panel-title" style="font-size:18px">
							<!-- New -->
							<a class="accordion-toggle autoswtich{{ sub.faq_id }}" data-toggle="collapse" data-parent=".accordion" href="#collapse{{ key }}-{{ result.fcategory_id }}">
							<!-- New -->
							{% if keys == 0 and key == 0 %}
							<i class="fa fa-caret-up" aria-hidden="true" style="color:#E49D81;margin-right: 10px;"></i>

							{% else %}
							 <i class="fa fa-caret-down" aria-hidden="true" style="color:#E49D81;margin-right: 10px;"></i>

							{% endif %}
							  {{ sub.name }}
							</a>
						  </h4>
						</div>
						<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer"  id="collapse{{ key }}-{{ result.fcategory_id }}" class="panel-collapse collapse {% if keys==0 and key==0 %} {{ 'in' }} {% endif %}">
						  <div itemprop="text" class="panel-body" style="margin-left: 25px;">
						  	{{ sub.description }}
						  </div>
						</div>
					  </div>
				  {% endfor %}
				</div>
			{% endfor %}
		{{ content_bottom }}</div>
    {{ column_right }}</div></div></div>
</div>
<script>
function faqfilter(){
  var search = $('input[name="filtername"]').val();
  url = 'index.php?route=extension/faq/search';
  url += '&fsearch='+encodeURI(search);
  location =url; 
}
</script>
<script type="text/javascript"><!--
$('input[name="filtername"]').keydown(function(e) {
	if (e.keyCode == 13) {
		faqfilter();
	}
});
//--></script> 
<script>
	$('.collapse').on('shown.bs.collapse', function(){
$(this).parent().find(".fa-caret-down").removeClass("fa-caret-down").addClass("fa-caret-up");
}).on('hidden.bs.collapse', function(){
$(this).parent().find(".fa-caret-up").removeClass("fa-caret-up").addClass("fa-caret-down");
});
</script>
{% if faq_id %}
	<script>
		id=$('.autoswtich{{ faq_id }}').attr('href');
		$('.autoswtich{{ faq_id }}').trigger('click');
		var offset = $(id).offset();
		$('html, body').animate({ scrollTop:  offset.top }, 'slow');
	</script>
{% endif %}
{{ footer }}