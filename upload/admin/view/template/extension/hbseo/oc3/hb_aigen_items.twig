<div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', this.checked);" /></td>
                <td class="text-center">{{ column_id }}</td>
                <td class="text-left">{{ column_name }}</td>
                {% if type == 'product' %}<td class="text-left">{{ column_model }}</td>{% endif %}
                <td class="text-left">{{ column_meta_title }}</td>
                <td class="text-left">{{ column_meta_description }}</td>
                <td class="text-left">{{ column_meta_keyword }}</td>
                <td class="text-right col-sm-2">{{ column_action }}</td>                
            </tr>
        </thead>
        <tbody>
            {% if (records) %}
                {% for record in records %}
                    <tr>
                        <td style="text-align: center;">
                            <input type="checkbox" name="selected[]" value="{{ record.item_id }}" />
                        </td>
                        <td class="text-center"><a href="{{ record.href}}" target="_blank">{{ record.item_id }}</a></td>
                        <td class="text-left">{{ record.name }}</td>
                        {% if type == 'product' %}<td class="text-left">{{ record.model }}</td>{% endif %}
                        <td class="text-left">{{ record.meta_title }}</td>
                        <td class="text-left">{{ record.meta_description }}</td>
                        <td class="text-left">{{ record.meta_keyword }}</td>
                        <td class="text-right">
                            <a onclick="promptPreview('{{ type }}', '{{ record.item_id }}', '{{ record.language_id }}')" data-toggle="tooltip" title="{{ button_prompt_preview }}" class="btn btn-primary"><i class="fa fa-microphone"></i></a>
                            <a href="{{ record.edit }}" target="_blank" data-toggle="tooltip" title="{{ button_edit }}" class="btn btn-warning"><i class="fa fa-pencil"></i></a>
                            <a id="btn_generate_item_{{ type }}_{{ record.item_id }}_{{ record.language_id }}" onclick="generateItem('{{ type }}', '{{ record.item_id }}', '{{ record.language_id }}')" data-toggle="tooltip" title="{{ button_generate }}" class="btn btn-success"><i class="fa fa-play-circle"></i></a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td class="text-center" colspan="8">{{ text_no_records }}</td>
                </tr>
            {% endif %}
        </tbody>
    </table>
</div>

<div class="row">
	<div class="col-sm-6 text-left">{{ pagination }}</div>
	<div class="col-sm-6 text-right">{{ results }}</div>
</div>
