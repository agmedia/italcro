{{ header }}
<div class="bread_crumb">
 <div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
 </div>
</div>
<div class="container">
  <div class="wrap">
	<div class="inner-wrap">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
	
			<div class="col-sm-6 faqtitle">
				<h2 class="faq">{{ heading_title }}</h2> 
			</div>
			<div class="col-sm-6 input-group pull-right">
			  <input class="form-control" type="text" name="filtername" value=""/> <span class="input-group-btn"><button onclick="faqfilter();" class="btn btn-default"><i class="fa fa-search"></i></button></span>
			</div>
	<div class="clearfix"></div>
	 <div class="row">
		{% if results %}
    		{% for result in results %}
			<div class="product-layout col-sm-4  col-xs-12">
			  <div class="product-thumb">
				<div class="image"><a href="{{ result.href }}"><img src="{{ result.thumb }}" alt="{{ result.name }}" title="{{ result.name }}" class="img-responsive" /></a></div>
				<div itemscope itemprop="mainEntity" itemtype="https://schema.org/Question">
				  <div class="caption">
					<h4 itemprop="name"><a href="{{ result.href }}">{{ result.name }}</a></h4>
					<div itemscope itemprop="acceptedAnswer" itemtype="https://schema.org/Answer"><p itemprop="text">{{ result.meta_description }}</p></div>
				  </div>
				</div>
				</div>
			  </div>
		{% endfor %}
		{% endif %}
	 </div>		
		{{ content_bottom }}</div>
    {{ column_right }}</div></div></div>
</div>
<script>
function faqfilter(){
  var search = $('input[name="filtername"]').val();
  url = 'index.php?route=extension/faqcategory/search';
  url += '&fsearch='+encodeURI(search);
  location =url; 
}
</script>
<script type="text/javascript"><!--
$('input[name="filtername"]').keydown(function(e) {
	if (e.keyCode == 13) {
		faqfilter();
	}
});
//--></script> 
{{ footer }}